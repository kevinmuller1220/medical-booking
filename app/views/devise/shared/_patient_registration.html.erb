<h2>Sign up</h2>
<%= link_to "Facebook", patient_omniauth_authorize_path(:facebook) %>
<%= simple_form_for(PatientUser.new, as: :patient_user, url: registration_path(:patient_user)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :birthdate, as: :date %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
