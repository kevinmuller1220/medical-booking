.send-review-box {
	h3 {
		font-size: 20px;
		color: #595959;
		font-family: 'Open Sans', sans-serif;
	}
	.section-title {
		margin-bottom: 30px;
	}
	.stars-box {
		.star {
			color: #d1d1d1;
			&:hover:before {
				content: '\f005';
			}
			&:hover ~ .star:before,
			&.active ~ .star:before,
			&.active:before,
			&:hover {
				content: '\f005';
				color: #f6c10a;
			}
			&:before {
				content: '\f005';
				font-family: FontAwesome;
				@include transition-all;
