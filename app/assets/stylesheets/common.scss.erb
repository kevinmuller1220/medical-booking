 /* Raiting Stars ---------------------------------------------
 ----------------------------------------------------- */

.stars-box {
	width: 97px;
	display: inline-block;
	.star {
		display: block;
		float: right;
		padding: 0 3px;
		font-size: 14px;
		color: inherit;
		@include transition-all;
		color: #f6c10a;
		&:hover:before {
			content: '\f005';
		}
		&:hover ~ .star:before,
		&.active ~ .star:before,
		&.active:before {
			content: '\f005';
		}
		&:hover {
			@include scale(1.25);
		}
		&:before {
			content: '\f006';
			font-family: FontAwesome;
			@include transition-all;
		}
	}
	& + .label {
		font-size: 13px;
		color: #000;
		font-weight: 400;
		display: block;
		float: none;
		margin-bottom: 12px;
		line-height: 100%;
	}
}

