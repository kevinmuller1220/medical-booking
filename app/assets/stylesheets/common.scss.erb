.top-categories-grid {
	padding: 0;
	& > div {
		height: 300px;
		position: relative;
		overflow: hidden;
		padding: 0;
		margin: 0;
		@include background-cover;
		h3 {
			text-transform: uppercase;
			color: inherit;
		}
		&:before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			width: 100%;
			height: 100%;
			background: rgba(0,0,0,0.5);
			opacity: 0;
			@include transition-all(0.2s);
		}
		&:hover {
			.box-default {
				@include opacity(0);
			}
			.box-hover {
				@include opacity(1);
				-webkit-transform: translate3d(0, 0px,0);
				transform: translate3d(0, 0px,0);
			}
			&:before {
				opacity: 1;
			}
		}
	}
	.box-default {
		display: block;
		width: 100%;
		height: 100%;
		font-weight:100;
		color: #fff;
		padding: 15px;
		text-align: center;
		@include transition-all;
	}
	.box-hover {
		display: block;
		position: absolute;
		left: 0;
		top: 0;
		right: 0;
		bottom: 0;
		width: 100%;
		height: 100%;
		color: #fff;
		padding: 15px;
		text-align: center;
		line-height: 1.5em;
		-webkit-transform: translate3d(0, 50px,0);
		transform: translate3d(0, 50px,0);
		@include transition-all(0.25s);
		@include opacity(0);
		.cat-title {
			font-size: 20px;
			font-weight: 600;
			/*font-family: 'Dosis', sans-serif;*/
			text-transform: uppercase;
			position: relative;
			padding-bottom: 17px;
			margin-bottom: 20px;
			&:before {
				content: '';
				display: block;
				width: 52px;
				height: 2px;
				background: #fff;
				position: absolute;
				bottom: 0;
				left: 50%;
				margin-left: -26px;
			}
		}
		.cat-descript {
			max-width: 300px;
			margin: 0 auto 15px;
		}
	}
}

