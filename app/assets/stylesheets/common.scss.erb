/* Header ---------------------------------------------
 ----------------------------------------------------- */

.header {
	min-height: 100px;
	background: rgba(0,0,0,0.5);
	font-size: 14px;
	font-weight: 600;
	color: #fff;
	padding: 28px 0 0;
	@include background-cover;
	letter-spacing: 0.05em;
	position: relative;
	&.darked-header {
		background: #404040;
	}
	.site-logo  {
		display: block;
		float: left;
	}
	.navbar a:not(.btn-default) {
		color: inherit;
	}
	&.main-page-header {
		background-image: url(<%= asset_path('bg/main-banner.jpg') %>);
	}
	.navbar-collapse {
		float: right;
	}
	.navbar-toggle {
		position: absolute;
		margin: 0;
		top: 12px;
		right: 15px;
		border: 1px solid #fff;
		.icon-bar {
			background: #fff;
		}
	}
	.location {
		display: inline-block;
		padding: 9px 9px 9px 20px;
		margin-left: 10px;
		position: relative;
		&:before {
			content: "\f041";
			@include font-icon;
			position: absolute;
			left: 0;
			top: 0;
			font-size: 22px;
		}
	}
	.navbar-nav {
		& > li {
			&.active > a {
				text-decoration: underline;
			}
			a:hover {
				color: #eee;
			}
			&.notification-dropdown {
				padding-left: 28px;
				padding-right: 15px;
				.notification-btn {
					display: block;
					margin-top: 6px;
					width: 30px;
					height: 30px;
					line-height: 30px;
					text-align: center;
					@include border-radius(50%);
					background: $brand-primary;
					color: #fff;
					font-size: 16px;
					padding: 0;
					position: relative;
					span {
						display: block;
						width: 18px;
						height: 18px;
						line-height: 18px;
						text-align: center;
						@include border-radius(50%);
						background: #00b8d4;
						font-size: 12px;
						right: -7px;
						top: -7px;
						position: absolute;
					}
					&:before {
						content: "\f107";
						display: block;
						position: absolute;
						left: -18px;
						top: 0;
						font-size: 13px;
						color: $brand-primary;
						@include font-icon;
					}
				}
				.dropdown-menu {
					li {
						padding: 8px 10px;
						strong {
							display: block;
							& + span {
								font-size: 11px;
								color: #999;
								padding-left: 19px;
								display: block;
							}
						}
						.fa {
							font-size: 10px;
							width: 15px;
							height: 15px;
							display: inline-block;
							line-height: 14px;
							text-align: center;
							vertical-align: middle;
							background: #45cbe0;
							color: #fff;
							@include border-radius(50%);
						}
						.btn {
							margin-top: 8px;
							background: #94d1ae;
							border-color: #94d1ae;;
							color: #fff;
							font-size: 12px;
							padding: 3px 8px;
							border-radius: 3px;
							display: inline-block;
							width: 119px;
							&:hover {
								background: #47BB78;
								border-color: #47BB78;
							}
							&.btn-warning {
								background: #f0905b;
								border-color: #f0905b;
								&:hover {
									background: #f36b20;
									border-color: #f36b20;
								}
							}
						}
					}
				}
			}
			&.profile-dropdown {
				.profile-image {
					display: block;
					position: relative;
					span {
						display: block;
						width: 50px;
						height: 50px;
						text-align: center;
						@include border-radius(50%);
						overflow: hidden;
						margin-right: 3px;
						float: left;
						position: absolute;
						left: -48px;
						top: -6px;
					}
				}
			}
		}
		.dropdown-menu {
			letter-spacing: 0em;
			color: #595959;
			font-size: 13px;
			li {
				display: block;
				border-bottom: 1px solid #ededed;
				&:last-child {
					border: none;
				}
				a {
					padding: 5px 10px;
					&:hover {
						color: #333;
					}
					.fa {
						font-size: 1.25em;
						color: #bfbfbf;
						margin-right: 3px;
					}
				}
			}
		}
	}
	.login-box {
		float: right;
		margin-left: 25px;
		padding-left: 40px;
		position: relative;
		&:before {
			content: '';
			display: block;
			position: absolute;
			left: 0;
			top: 8px;
			height: 24px;
			width: 1px;
			background: rgba(255,255,255,0.8);
		}
		.btn {
			padding: 8px 12px;
			text-transform: uppercase;
			font-weight: 600;
			margin: 0 3px;
		}
	}
}

