// Bootstrap extra customization
.btn {
	@include transition-all();
	border-width: 2px;
	text-transform: uppercase;
}

// Bootstrap extra grid customization
.col-xs-15, .col-sm-15, .col-md-15, .col-lg-15, .col-xs-40, .col-sm-40, .col-md-40, .col-lg-40 {
	position: relative;
  min-height: 1px;
  padding-right: 15px;
  padding-left: 15px;
}
.col-xs-15, .col-xs-40 {
  float: left;
}
.col-xs-40 {
  width: 40%;
}
.col-xs-15 {
  width: 20%;
}
@media (min-width: 768px) {
	.col-sm-15, .col-sm-40 {
    float: left;
  }
	.col-sm-40 {
    width: 40%;
  }
	.col-sm-15 {
    width: 20%;
  }
}
@media (min-width: 992px) {
	.col-md-15, .col-md-40 {
    float: left;
  }
	.col-md-40 {
    width: 40%;
  }
	.col-md-15 {
    width: 20%;
  }
}
@media (min-width: 1230px) {
	.col-lg-15, .col-md-40 {
    float: left;
  }
	.col-md-40 {
    width: 40%;
  }
	.col-lg-15 {
      width: 20%;
  }
}

