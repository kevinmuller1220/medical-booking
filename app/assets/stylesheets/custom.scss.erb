// Header and home landing sections
.jumbotron {
	margin-bottom: 0;
}

.header {
	&.header_home {
		background-image: url(<%= asset_path('bg/main-banner.jpg') %>);
	}
	&.header_darked {
		background-color: #404040;
	}
	.navbar-header {
		position: relative;
		z-index: 1;
	}
}

.bg-white {
	background-color: #fff;
}

// Top search bar
.search-form-section {
	font-weight: 600;
}
.breadcrumbs ul li {
	font-size: 14px;
	letter-spacing: 0.05em;
}
// Types reset
h1, .h1, h2, .h2 {
	font-family: inherit;
}
h1, .h1 {
  margin-bottom: 25px;
	font-weight: 100;
}
h2, .h2 {
	font-weight: 100;
}
h3, .h3 {
  font-weight: 100;
}
h4, .h4 {
  font-weight: 100;
}
h5, .h5 {
  font-weight: 100;
}
.alert-primary {
  background-color: $brand-primary;
  border-color: #ded2c1;
  color: #fff;
}

// Registration Form Related
.time-box {
	select.form-control {
		width: 36px;
		height: 25px;
		background-position: right 3px center;
		text-align: left;
	}
}
.flash-messages {
	margin-top: 20px;
	margin-bottom: 20px;
}

.field_with_errors {
	.error {
		color: $brand-warning;
		margin: 3px 0 15px 0;
		display: block;
	}
}

.date-select {
	&:after {
		clear: both;
		display: table;
		content: '';
	}
	select {
		margin: 0 2.5%;
		width: 40%;
		float: left;
		&:first-child {
			margin-left: 0;
			width:30%;
		}
		&:last-child {
			margin-right: 0;
			width: 20%;
		}
	}
}

// Schedule table in doctor account page
.week-days table.week-schedule tr td h6 {
	margin: 0;
}

.book-upcoming .button_to {
	display: inline-block;
	+ .button_to {
		margin-left: 35px;
	}
}

.header .navbar-nav > li.notification-dropdown .dropdown-menu li strong {
	white-space: nowrap;
}

#calendar .fc-bgevent {
	background-color: #bbb;
}
